{% extends "master.twig" %}
{% block titulo %}Restablecer contraseña
{% endblock %}
{% block contenido %}
<main class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-4 offset-lg-4">
            <h1 class="text-center">Restablecer contraseña</h1>
            <form action="{{URL_RAIZ}}/usuarios/restablecer-password" method="post">
                {% include "componentes/sesion_flash.twig" %}
                <input type="hidden" value="{{token}}" name="token">
                <div class="form-group">
                    <label for="palabraSecreta">Contraseña nueva</label>
                    <input autocomplete="off" class="form-control" id="palabraSecreta" name="palabraSecreta" placeholder="Escribe tu nueva contraseña" required type="password">
                </div>
                <div class="form-group">
                    <label for="palabraSecretaConfirm">Confirmar nueva contraseña</label>
                    <input autocomplete="off" class="form-control" id="palabraSecretaConfirm" name="palabraSecretaConfirm" placeholder="Vuele a escribir tu nueva contraseña" required type="password">
                </div>
                <button class="btn btn-success" type="submit">Restablecer</button>
            </form>
        </div>
    </div>
</main>

{% endblock %}
