{% extends "master.twig" %}
{% block titulo %}Agregar usuario
{% endblock %}
{% block contenido %}
    <main class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center">Agregar usuario</h1>
            </div>
            <div class="col-12 col-sm-3">
                <form action="{{ URL_RAIZ }}/usuarios/guardar" method="post">
                    {% include "componentes/token_csrf.twig" %}
                    {% include "componentes/sesion_flash.twig" %}
                    <div class="form-group">
                        <label for="correo">Correo electrónico</label>
                        <input autocomplete="off" class="form-control" id="correo" name="correo"
                               placeholder="Correo electrónico" required type="email">
                    </div>
                    <div class="form-group">
                        <label for="palabraSecreta">Contraseña</label>
                        <input autocomplete="off" class="form-control" id="palabraSecreta" name="palabraSecreta"
                               placeholder="Escribe tu contraseña" required type="password">
                    </div>
                    <div class="form-group">
                        <label for="palabraSecretaConfirm">Confirmar contraseña</label>
                        <input autocomplete="off" class="form-control" id="palabraSecretaConfirm"
                               name="palabraSecretaConfirm" placeholder="Vuele a escribir tu contraseña" required
                               type="password">
                    </div>
                    <div class="form-group">
                        <label for="administrador">Administrador</label>
                        <input id="administrador" name="administrador" type="checkbox">
                    </div>
                    <button class="btn btn-success" type="submit">Guardar</button>
                    <a class="btn btn-warning" href="{{ URL_RAIZ }}/usuarios">Ver usuarios</a>
                </form>
            </div>
        </div>
    </main>

{% endblock %}
